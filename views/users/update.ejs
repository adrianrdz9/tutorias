<div class="container">
    <div class="card mt-4">
        <div class="card-header">
            Actualizar mi cuenta
        </div>
        <div class="card-body">
            <form action="/users/update" method="post">
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <div class="form-group row">
                    <label for="name" class="col-4 text-right"><%= __('Name') %></label>
                    <input type="text" name="name" id="name" value="<%= user.name %>" class="form-control col-6">
                </div>
                <div class="form-group row">
                    <label class="col-4 text-right"><%= __('Account number') %></label>
                    <span><%= user.account_number %></span>
                </div>
                <div class="form-group row">
                    <label class="col-4 text-right"></label>
                    <span class="text-muted"><%= user.is_tutor ? "Eres tutor" : "No eres tutor" %></span>
                </div>
                
                <div class="p-4">
                    <div class="form-group row border p-4"> 
                        <div class="col-2"></div>
                        <div class="col-9 mb-4">
                            <span class="h4"><%= __('Change password') %></span><br>
                            <small><%= __('Leave blank if don\'t want to change it') %></small>
                        </div>

                        <label for="old_password" class="col-4 text-right"><%= __('Old password') %></label>
                        <input type="password" name="old_password" id="old_password" class="form-control col-6 mb-3">
        
                        <label for="password" class="col-4 text-right"><%= __('New password') %></label>
                        <input type="password" name="password" id="password" class="form-control col-6 mb-3">
        
                        <label for="password_confirmation" class="col-4 text-right"><%= __('New password confirmation') %></label>
                        <input type="password" name="password_confirmation" id="password_confirmation" class="form-control col-6">
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Actualizar" class="btn btn-info">
                </div>

            </form>
        </div>
    </div>
</div>