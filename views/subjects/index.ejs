<div class="container-fluid">
    <div class="row">
        <% for(subject of subjects){ %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 p-2">
                <div class="card" style="cursor: pointer;" onclick="window.location.replace('subjects/<%= subject.id %>')">
                    <div class="card-body">
                        <h2><%= subject.title %></h2>
                    </div>
                    <div class="card-footer">
                        Asesorias disponibles: 
                        <%= subject.available %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>