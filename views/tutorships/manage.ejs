<div class="container-fluid py-2 px-4">
    <h1>Administrar tutorias</h1>
    <hr>
    <h2>Mis tutorias</h2>
    <div class="row">
        <% for(tutorship of tutorships){ %>
            <div class="col-sm-12 col-md-6 col-lg-4 p-2">
                <div class="card" style="cursor: pointer;">
                    <div class="card-header text-right py-0 text-light <%= tutorship.is_available ? 'bg-success' : 'bg-danger' %>">
                        <small>
                            <%= tutorship.is_available ? 'Disponible' : 'No Disponible' %>
                        </small>
                    </div>
                    <div class="card-body">
                        <h2><%= tutorship.subject.title %></h2>
                        <ul>
                            <% for(student of tutorship.users){ %>
                                <li><%= student.name %></li>
                            <% } %>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6">
                                Lugares disponibles: 
                                <%= tutorship.available %>
                            </div>
        
                            <div class="col-6 text-right">
                                <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#requests-<%= tutorship.id %>" 
                                    aria-expanded="false" aria-controls="requests-<%= tutorship.id %>">
                                    Ver solicitudes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <h2 class="mt-4">Solicitudes</h2>
    <% for(tutorship of tutorships){ %>
        <div class="collapse" id="requests-<%= tutorship.id %>">
            <div class="card">
                <div class="card-header bg-info text-light">
                    <div class="row">
                        <div class="col-6">
                            Solicitudes
                        </div>
                        <div class="text-right col-6">
                            <strong><%= tutorship.subject.title %></strong>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <% for(request of tutorship.requests){ %>
                            <div class="col-md-6 col-lg-4">
                                <div class="card">
                                    <div class="card-header bg-secondary text-light">
                                        <%= request.requestor.name %>
                                    </div>

                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12 col-lg-6">
                                                <button class="btn btn-success w-100 accept-tutorship-request" data-request-id="<%= request.id %>">Aceptar</button>
                                            </div>
                                            <div class="col-md-12 col-lg-6">
                                                <button class="btn btn-danger w-100 reject-tutorship-request" data-request-id="<%= request.id %>">Rechazar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <div style="min-height: 30vh;"></div>        
</div>